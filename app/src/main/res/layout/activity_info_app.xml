<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InfoAppActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginBottom="18dp"
        android:background="@color/primaryColor"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="17dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Informasi Aplikasi"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </FrameLayout>
    </LinearLayout>

    <com.skydoves.expandablelayout.ExpandableLayout
        android:id="@+id/expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-18dp"
        app:expandable_duration="300"
        app:expandable_isExpanded="false"
        app:expandable_parentLayout="@layout/layout_parent"
        app:expandable_secondLayout="@layout/layout_value_one"
        app:expandable_showSpinner="true"
        app:expandable_spinner="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:expandable_spinner_animate="true"
        app:expandable_spinner_gravity="end"
        app:expandable_spinner_margin="14dp"
        app:expandable_spinner_size="32dp" />

    <com.skydoves.expandablelayout.ExpandableLayout
        android:id="@+id/expandable2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:expandable_duration="300"
        app:expandable_isExpanded="false"
        app:expandable_parentLayout="@layout/layout_parent_two"
        app:expandable_secondLayout="@layout/layout_value_two"
        app:expandable_showSpinner="true"
        app:expandable_spinner="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:expandable_spinner_animate="true"
        app:expandable_spinner_gravity="end"
        app:expandable_spinner_margin="14dp"
        app:expandable_spinner_size="32dp" />

    <com.skydoves.expandablelayout.ExpandableLayout
        android:id="@+id/expandable3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:expandable_duration="300"
        app:expandable_isExpanded="false"
        app:expandable_parentLayout="@layout/layout_parent_three"
        app:expandable_secondLayout="@layout/layout_value_three"
        app:expandable_showSpinner="true"
        app:expandable_spinner="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:expandable_spinner_animate="true"
        app:expandable_spinner_gravity="end"
        app:expandable_spinner_margin="14dp"
        app:expandable_spinner_size="32dp" />

    <com.skydoves.expandablelayout.ExpandableLayout
        android:id="@+id/expandable4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:expandable_duration="300"
        app:expandable_isExpanded="false"
        app:expandable_parentLayout="@layout/layout_parent_four"
        app:expandable_secondLayout="@layout/layout_value_four"
        app:expandable_showSpinner="true"
        app:expandable_spinner="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:expandable_spinner_animate="true"
        app:expandable_spinner_gravity="end"
        app:expandable_spinner_margin="14dp"
        app:expandable_spinner_size="32dp" />
</LinearLayout>