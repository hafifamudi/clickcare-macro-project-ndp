<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.pasien.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!--        Hero image -->

        <TextView
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:text="Lupa Password ?"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="91dp"
            android:textSize="24dp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/textColorPrimary"
            />

        <TextView
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:text="Silakan masukkan alamat email Anda untuk menerima verifikasi"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/textColorSecondary"
            />

        <!--        Form for User Input-->
        <!--        Email-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="39dp"
            />

        <EditText
            android:id="@+id/email_verification"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Alamat Email"
            android:textSize="14sp"
            android:textColorHint="@color/textColorSecondary"
            android:fontFamily="@font/poppins_medium"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/mail_icon"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="@drawable/form_user_input"
            android:layout_marginTop="10dp"
            />


        <Button
            android:id="@+id/send_email_verification"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textCapSentences"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:text="Kirim Email Verifikasi"
            android:layout_marginTop="60dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/button_primary"
            />

    </LinearLayout>

</ScrollView>