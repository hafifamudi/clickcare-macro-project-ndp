<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".activities.pasien.PaymentGatewayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:layout_marginBottom="18dp"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:padding="17dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Pembayaran"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thumbnail_card"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="0dp"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/doctor_photo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/doctor_1"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>


                <ImageView
                    android:id="@+id/status"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="45dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/online_icon"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="1dp"
                >

                <TextView
                    android:id="@+id/doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Bagus Budiono"
                    android:textColor="#121212"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="16sp"
                    />


                <TextView
                    android:id="@+id/doctor_spesialis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spesialis jantung"
                    android:fontFamily="@font/inter_regular"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:padding="14dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ringkasan Pembayaran"
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="Biaya Konsultasi"
                    android:fontFamily="@font/inter_regular"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="Rp.20.000"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/textColorPrimary"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="Durasi Konsultasi"
                    android:fontFamily="@font/inter_regular"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="30 menit"
                    android:gravity="end"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/textColorPrimary"
                    />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="23dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="Total"
                    android:fontFamily="@font/inter_regular"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="Rp.20.000"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/secondaryColor"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:padding="14dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="Pilih metode pembayaranmu"
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton android:id="@+id/gopay"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:padding="20dp"
                    android:drawableRight="@drawable/gopay"
                    android:background="@drawable/form_user_input" />

                <RadioButton android:id="@+id/dana"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_marginTop="2dp"
                    android:padding="20dp"
                    android:drawableRight="@drawable/dana"
                    android:background="@drawable/form_user_input"/>

                <RadioButton android:id="@+id/bri"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_marginTop="2dp"
                    android:padding="20dp"
                    android:drawableRight="@drawable/bri"
                    android:background="@drawable/form_user_input"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:padding="14dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/booking_doctor"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="textCapSentences"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:text="Bayar dan Chat Sekarang"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="37dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/button_primary"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>