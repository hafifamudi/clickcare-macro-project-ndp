<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.pasien.DetailRegistrasi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:layout_marginBottom="18dp"
        android:background="@color/primaryColor"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="17dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Data Pesan Antrian"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_marginTop="-86dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_antrian"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pasien"
                android:layout_marginLeft="61dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu"
                android:layout_marginLeft="61dp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keluhan"
                android:layout_marginLeft="61dp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dokter"
                android:layout_marginLeft="61dp"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/antrian_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="April Mei"
                android:layout_marginRight="61dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/textColorPrimary"
                />

            <TextView
                android:id="@+id/antrian_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rabu, 00:30"
                android:layout_marginRight="61dp"
                android:textAlignment="textEnd"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/textColorPrimary"
                />

            <TextView
                android:id="@+id/antrian_keluhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keluhan"
                android:layout_marginRight="61dp"
                android:textAlignment="textEnd"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/textColorPrimary"
                />

            <TextView
                android:id="@+id/antrian_dokter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Bagus Budiono"
                android:layout_marginRight="61dp"
                android:textAlignment="textEnd"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/textColorPrimary"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="96dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No.Antrian"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/no_antrian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A3-1"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#303E65"
                    android:textSize="30sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saat ini"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#303E65"
                    android:textSize="30sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No.Antrian"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#303E65"
                    android:textSize="30sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/card_alert"
        android:orientation="vertical"
        android:paddingLeft="17dp"
        android:paddingTop="20dp"
        android:paddingRight="17dp"
        android:paddingBottom="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_info_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Diharapkan datang ke rumah sakit 1 jam sebelum jadwal praktek"
                android:textAlignment="textStart"
                android:textColor="#B87A04"
                android:layout_marginLeft="30dp"
                />
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/registrasi"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="textCapSentences"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:text="Pesan Antrian"
        android:layout_marginTop="103dp"
        android:layout_marginBottom="37dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="120dp"
        android:paddingRight="120dp"
        android:background="@drawable/button_primary"
        android:theme="@style/Theme.ClickCare"
        />
</LinearLayout>