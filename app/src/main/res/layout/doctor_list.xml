<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/thumbnail_card"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/doctor_photo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/doctor_1"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/status"
                android:layout_gravity="bottom"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="10dp"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/online_icon"
                />
        </FrameLayout>  123
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            >

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Bagus Budiono"
                android:textColor="#121212"
                android:textAlignment="textStart"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="16sp"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">


                <TextView
                    android:id="@+id/doctor_spesialis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spesialis jantung"
                    android:fontFamily="@font/inter_regular"
                    />

                <TextView
                    android:id="@+id/avg_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textAlignment="center"
                    android:layout_marginLeft="140dp"
                    android:drawableLeft="@drawable/ic_baseline_star_24"
                    android:drawablePadding="-90dp"
                    android:fontFamily="@font/inter_medium"
                    />

                <TextView
                    android:id="@+id/all_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(456)"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="55dp"
                    android:fontFamily="@font/inter_medium"
                    />
            </FrameLayout>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_doctor"
                android:drawableLeft="@drawable/message_writing"
                android:padding="8dp"
                android:layout_gravity="end"
                android:layout_marginTop="-50dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>