<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".activities.pasien.BookAntrianPasien">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginBottom="18dp"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="17dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Antrian Kamu"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nothing_antrian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <ImageView
                android:layout_width="157dp"
                android:layout_height="157dp"
                android:layout_gravity="center"
                android:layout_marginTop="97dp"
                android:src="@drawable/calender_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ups, Belum Ada Antrian"
                android:textAlignment="center"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/textColorPrimary"
                android:layout_marginTop="79dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Yuk, tentukan tanggal antrianmu sekarang"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/textColorSecondary"
                android:layout_marginTop="19dp"/>

            <Button
                android:id="@+id/booking_antrian"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="textCapSentences"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:text="Pesan Antrian"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="37dp"
                android:background="@drawable/button_primary"
                android:theme="@style/Theme.ClickCare"
                />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/there_is_antrian"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_marginTop="26dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_antrian"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pasien"
                android:layout_marginLeft="61dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu"
                android:layout_marginLeft="61dp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keluhan"
                android:layout_marginLeft="61dp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dokter"
                android:layout_marginLeft="61dp"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/antrian_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="April Mei"
                android:layout_marginRight="61dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/textColorPrimary"
                />

            <TextView
                android:id="@+id/antrian_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rabu, 00:30"
                android:layout_marginRight="61dp"
                android:textAlignment="textEnd"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/textColorPrimary"
                />

            <TextView
                android:id="@+id/antrian_keluhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keluhan"
                android:layout_marginRight="61dp"
                android:textAlignment="textEnd"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/textColorPrimary"
                />

            <TextView
                android:id="@+id/antrian_dokter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Bagus Budiono"
                android:layout_marginRight="61dp"
                android:textAlignment="textEnd"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/textColorPrimary"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="96dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No.Antrian"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/no_antrian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A3-1"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#303E65"
                    android:textSize="30sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saat ini"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#303E65"
                    android:textSize="30sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sisa"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#303E65"
                    android:textSize="30sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
</ScrollView>