<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatDoctorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:padding="17dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_baseline_arrow_back_24" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="30dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/thumbnail_card"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="0dp"
                        android:layout_margin="10dp">
                        <ImageView
                            android:id="@+id/doctor_photo"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/doctor_1"
                            />

                    </androidx.cardview.widget.CardView>


                    <ImageView
                        android:id="@+id/status"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="45dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/online_icon"
                        />


                </FrameLayout>

                <TextView
                    android:id="@+id/doctor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dr. Bagus Budiono"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="16sp"
                    />

                <Button
                    android:id="@+id/end_chat"
                    android:layout_width="66dp"
                    android:layout_height="36dp"
                    android:layout_gravity="end"
                    android:inputType="textCapSentences"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Akhiri"
                    android:layout_marginBottom="37dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_primary"
                    />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF3CD"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8 menit 30 detik"
                android:textColor="#B87A04"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hari ini"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="38dp"
                android:textAlignment="center"/>


            <TextView
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:text="@string/reciever_1"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="38dp"
                android:padding="23dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/receiving_chat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gigi saya sakit dok"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="14dp"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:padding="23dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/sending_chat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gigi saya sakit dok"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="7dp"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:padding="23dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/sending_chat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gigi berlubang kah ?"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="14dp"
                android:padding="23dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/receiving_chat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaga, dok"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="7dp"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:padding="23dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/sending_chat"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaga tau juga"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="7dp"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:padding="23dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/sending_chat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gigi berlubang kah ?"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="14dp"
                android:padding="23dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/receiving_chat"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/attach"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="14dp"
                android:layout_marginRight="30dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_add_circle_outline_24" />

            <EditText
                android:layout_width="280dp"
                android:layout_height="37dp"
                android:padding="16dp"
                android:background="@drawable/chat_form_input"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                />

            <ImageButton
                android:id="@+id/send_chat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="14dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:src="@drawable/sending_icon" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>