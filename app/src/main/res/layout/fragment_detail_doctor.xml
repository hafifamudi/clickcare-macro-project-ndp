<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.DetailDoctorFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/doctor_detail_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dr_bagus_budiono_m_sc_sp_a_adalah_dokterspesialis_jantung_dari_fakultas_kedokteran_universitas_asembagus_tahun_2015_beliau_aktif_praktik_di_rsud_pasar_minggu" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Nomor STR"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_medium"
        />

    <TextView
        android:id="@+id/doctor_detail_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2324811213502858"
        android:textColor="@color/textColorPrimary"
        android:fontFamily="@font/inter_regular"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textAlignment="center"
                android:fontFamily="@font/inter_regular"
                />

            <TextView
                android:id="@+id/doctor_detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:text="Rp.20.000"
                android:textAlignment="center"
                android:textColor="@color/black"
                />
        </LinearLayout>


        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#E7E7F6"
            android:layout_marginLeft="13dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pasien"
                android:textAlignment="center"
                android:fontFamily="@font/inter_regular"
                />

            <TextView
                android:id="@+id/doctor_detail_pasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:text="Rp.20.000"
                android:textAlignment="center"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#E7E7F6"
            android:layout_marginLeft="13dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengalaman"
                android:textAlignment="center"
                android:fontFamily="@font/inter_regular"
                />

            <TextView
                android:id="@+id/doctor_detail_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:text="Rp.20.000"
                android:textAlignment="center"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>