<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!--        Hero image -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:src="@drawable/app_icon_complete"
            android:layout_marginTop="80dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_register"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/textColorSecondary"
            />

        <!--        Form for User Input-->
        <!--        Name-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="39dp"
            />

        <EditText
            android:id="@+id/username_register"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Masukan Nama"
            android:textSize="14sp"
            android:textColorHint="@color/textColorSecondary"
            android:fontFamily="@font/poppins_medium"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/user"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="@drawable/form_user_input"
            android:layout_marginTop="10dp"
            />


        <!--        Email-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="22dp"
            />

        <EditText
            android:id="@+id/email_register"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Alamat Email"
            android:textSize="14sp"
            android:textColorHint="@color/textColorSecondary"
            android:fontFamily="@font/poppins_medium"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/mail_icon"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="@drawable/form_user_input"
            android:layout_marginTop="10dp"
            />


        <!--        Password-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="22dp"
            />

        <EditText
            android:id="@+id/password_register"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="14sp"
            android:textColorHint="@color/textColorSecondary"
            android:fontFamily="@font/poppins_medium"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/lock_icon"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="@drawable/form_user_input"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            />

        <!--        Confirm Password-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="22dp"
            />

        <EditText
            android:id="@+id/confirm_password_register"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="14sp"
            android:textColorHint="@color/textColorSecondary"
            android:fontFamily="@font/poppins_medium"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/lock_icon"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="@drawable/form_user_input"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/registrasi"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_primary"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textCapSentences"
            android:paddingLeft="120dp"
            android:paddingTop="12dp"
            android:paddingRight="120dp"
            android:paddingBottom="12dp"
            android:text="Daftar"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <Button
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:textSize="14dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Daftar dengan Google"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/button_secondary"
            android:drawableStart="@drawable/icon_google"
            android:drawableLeft="@drawable/icon_google"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sudah punya akun ?"
                android:layout_marginLeft="110dp"
                android:fontFamily="@font/poppins_medium"
                />

            <Button
                android:id="@+id/login"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/masuk"
                android:textSize="14sp"
                android:inputType="textCapSentences"
                android:textAlignment="textEnd"
                android:textColor="@color/primaryColor"
                android:layout_marginRight="80dp"
                android:layout_marginTop="-12dp"
                android:layout_gravity="end"
                android:fontFamily="@font/poppins_medium"
                android:background="@android:color/transparent"
                />
        </FrameLayout>

        <ProgressBar
            android:id="@+id/progress_register_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:indeterminateTint="@color/primaryColor"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            />
    </LinearLayout>

</ScrollView>